<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="br.com.stant.libraries.uilibrary.components.informationcardview.InformationCardView" />

        <variable
            name="createdAt"
            type="String" />

        <variable
            name="title"
            type="String" />

        <variable
            name="type"
            type="String" />

        <variable
            name="deadline"
            type="String" />

        <variable
            name="actions"
            type="String" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/information_card_view_severity_level"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_severity_level"
                tools:ignore="Orientation" />

            <LinearLayout
                android:id="@+id/information_card_view_container_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="20dp">

                        <FrameLayout
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:background="@drawable/shape_round_gray_dark">

                            <TextView
                                android:id="@+id/information_card_view_created_at_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@{createdAt}"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="12/05/2018" />

                        </FrameLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_right" />

                        <FrameLayout
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:background="@drawable/shape_round_gray_dark">

                            <TextView
                                android:id="@+id/information_card_view_deadline_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@{deadline}"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="28/09/2018" />

                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/information_card_view_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:textColor="@color/gray_medium"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:text="3/5" />

                </LinearLayout>

                <TextView
                    android:id="@+id/information_card_view_type_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@{type}"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:text="Qualidade" />

                <TextView
                    android:id="@+id/information_card_view_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@{title}"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:text="Não estava usando o capacete em serviço" />


            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</layout>
